      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{testPhone}}\",\n  \"password\": \"{{testPassword}}\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save OTP and phone from register response",
                  "if (responseCode.code === 201) {",
                  "    var jsonData = JSON.parse(responseBody);",
                  "    console.log('Registration response:', jsonData);",
                  "    ",
                  "    // Save OTP if it exists in response",
                  "    if (jsonData.otp) {",
                  "        pm.environment.set('generatedOtp', jsonData.otp);",
                  "        console.log('OTP saved:', jsonData.otp);",
                  "    }",
                  "    ",
                  "    // Save phone number from request for verify step",
                  "    var requestData = JSON.parse(pm.request.body.raw);",
                  "    pm.environment.set('registeredPhone', requestData.phone);",
                  "    console.log('Phone saved:', requestData.phone);",
                  "    ",
                  "    // Save user data if returned",
                  "    if (jsonData.user && jsonData.user._id) {",
                  "        pm.environment.set('userId', jsonData.user._id);",
                  "        console.log('User ID saved:', jsonData.user._id);",
                  "    }",
                  "}",
                  "",
                  "// Test that registration was successful",
                  "pm.test('Registration successful', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response contains OTP', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('otp');",
                  "});"
                ]
              }
            }
          ],
          "response": []
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"{{registeredPhone}}\",\n  \"otp\": \"{{generatedOtp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-otp"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save JWT token from verify OTP response",
                  "if (responseCode.code === 200) {",
                  "    var jsonData = JSON.parse(responseBody);",
                  "    console.log('OTP verification response:', jsonData);",
                  "    ",
                  "    if (jsonData.token) {",
                  "        pm.environment.set('authToken', jsonData.token);",
                  "        console.log('Auth token saved from OTP verification:', jsonData.token);",
                  "    }",
                  "    ",
                  "    // Save user data",
                  "    if (jsonData.user && jsonData.user._id) {",
                  "        pm.environment.set('userId', jsonData.user._id);",
                  "        console.log('User ID saved:', jsonData.user._id);",
                  "    }",
                  "}",
                  "",
                  "// Test that OTP verification was successful",
                  "pm.test('OTP verification successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains JWT token', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "});"
                ]
              }
            }
          ],
          "response": []
        },
